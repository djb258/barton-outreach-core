# Instantly Integration Service Configuration

# Service Port
PORT=3006

# Instantly API Configuration
INSTANTLY_API_KEY=your_instantly_api_key_here

# Neon Database Configuration (for outcome tracking)
NEON_DATABASE_URL=postgresql://user:password@host/database

# Redis Configuration (for queue management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT=/api/webhooks/instantly

# Campaign Defaults
DEFAULT_EMAILS_PER_DAY=50
DEFAULT_TIMEZONE=America/New_York
DEFAULT_SEND_START_HOUR=9
DEFAULT_SEND_END_HOUR=17

# Email Settings
DEFAULT_FROM_NAME=Your Company
DEFAULT_REPLY_TO=replies@yourdomain.com

# Outcome Sync Settings
SYNC_OUTCOMES_TO_NEON=true
OUTCOME_SYNC_INTERVAL_MS=60000
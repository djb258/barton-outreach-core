# HeyReach Integration Service Configuration

# Service Port
PORT=3007

# HeyReach API Configuration
HEYREACH_API_KEY=your_heyreach_api_key_here

# Neon Database Configuration (for outcome tracking)
NEON_DATABASE_URL=postgresql://user:password@host/database

# Redis Configuration (for queue management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Service Configuration
NODE_ENV=development
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_ENDPOINT=/api/webhooks/heyreach

# Campaign Defaults
DEFAULT_DAILY_CONNECTION_LIMIT=20
DEFAULT_DAILY_MESSAGE_LIMIT=30
DEFAULT_TIMEZONE=America/New_York
DEFAULT_SEND_START_HOUR=9
DEFAULT_SEND_END_HOUR=17

# LinkedIn Settings
LINKEDIN_PROFILE_EXTRACTION=true
LINKEDIN_SEARCH_ENABLED=true

# Message Settings
DEFAULT_CONNECTION_MESSAGE=Hi {firstName}, I'd love to connect with you!
MESSAGE_PERSONALIZATION=true

# Outcome Sync Settings
SYNC_OUTCOMES_TO_NEON=true
OUTCOME_SYNC_INTERVAL_MS=60000

# Safety Settings
RESPECT_LINKEDIN_LIMITS=true
SAFE_MODE=true
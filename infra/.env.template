# Barton Outreach Core Environment Variables Template
# Copy this to .env and fill in your actual values

# Neon Database Configuration
DATABASE_URL=postgresql://username:password@your-neon-host/dbname?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@your-neon-host/dbname?sslmode=require

# API Configuration
PORT=3000
NODE_ENV=development
API_BASE=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# MCP Server API Keys
COMPOSIO_API_KEY=your_composio_api_key_here
REFTOOLS_API_KEY=your_reftools_api_key_here
COMPOSIO_DEFAULT_ENTITY=default

# AWS Amplify Configuration
VITE_AWS_REGION=us-east-1
VITE_USER_POOL_ID=your_user_pool_id
VITE_USER_POOL_CLIENT_ID=your_client_id
VITE_IDENTITY_POOL_ID=your_identity_pool_id
VITE_API_ENDPOINT=http://localhost:3000

# Development Settings
DEBUG=false
LOG_LEVEL=info

# Factory IMO Settings
FACTORY_MODE=development
BLUEPRINT_PATH=./blueprints

# MCP Integration
MCP_SERVER_PORT=8000
MCP_COMPOSIO_ENABLED=true
MCP_REFTOOLS_ENABLED=true
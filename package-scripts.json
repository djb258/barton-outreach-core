{
  "scripts": {
    "// Development": "",
    "dev": "vite",
    "dev:worker": "tsx watch server/index.ts",
    "dev:both": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    
    "// Building": "",
    "build": "vite build",
    "build:worker": "tsc server/index.ts --outDir dist/server",
    "build:all": "npm run build && npm run build:worker",
    
    "// Testing & CLI": "",
    "kickoff": "tsx cli/kickoff.ts",
    "test:lead": "tsx cli/kickoff.ts lead_only",
    "test:messaging": "tsx cli/kickoff.ts messaging_only", 
    "test:full": "tsx cli/kickoff.ts full_pipeline",
    "test:custom": "tsx cli/kickoff.ts custom",
    
    "// Workflow Testing with Config": "",
    "test:small-batch": "BATCH_SIZE=10 tsx cli/kickoff.ts lead_only",
    "test:no-ceo": "INCLUDE_CEO=false tsx cli/kickoff.ts lead_only",
    "test:csv": "CSV_FILE_PATH=./test-data/leads.csv tsx cli/kickoff.ts lead_only",
    "test:rate-limited": "EMAIL_RATE_LIMIT=5 LINKEDIN_RATE_LIMIT=2 tsx cli/kickoff.ts full_pipeline",
    
    "// Health & Status": "",
    "health": "curl -s http://localhost:8080/health | jq",
    "status": "curl -s http://localhost:8080/webhooks/status | jq",
    "ping": "curl -s http://localhost:8080/ping",
    
    "// Manual Triggers": "",
    "trigger:lead": "curl -X POST http://localhost:8080/webhooks/trigger/lead_only -H 'Content-Type: application/json' -d '{}'",
    "trigger:full": "curl -X POST http://localhost:8080/webhooks/trigger/full_pipeline -H 'Content-Type: application/json' -d '{\"batch_size\": 25}'",
    "trigger:messaging": "curl -X POST http://localhost:8080/webhooks/trigger/messaging_only -H 'Content-Type: application/json' -d '{}'",
    
    "// Webhook Testing": "",
    "webhook:apify": "curl -X POST http://localhost:8080/webhooks/apify -H 'Content-Type: application/json' -d '{\"event\": \"scrape_done\", \"payload\": {\"slot_ids\": [\"test_123\"]}}'",
    "webhook:delivery": "curl -X POST http://localhost:8080/webhooks/delivery -H 'Content-Type: application/json' -d '{\"event\": \"send_result\", \"payload\": {\"success\": true}}'",
    "webhook:validator": "curl -X POST http://localhost:8080/webhooks/validator -H 'Content-Type: application/json' -d '{\"event\": \"validate_result\", \"payload\": {\"results\": []}}'",
    
    "// Production": "",
    "start": "node dist/server/index.js",
    "start:worker": "node dist/server/index.js",
    "preview": "vite preview",
    
    "// Utilities": "",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "reset": "npm run clean && npm install",
    
    "// Docker": "",
    "docker:build": "docker build -t barton-outreach-core .",
    "docker:run": "docker run -p 8080:8080 --env-file .env barton-outreach-core",
    "docker:worker": "docker run --env-file .env barton-outreach-core npm run start:worker"
  },
  
  "devDependencies": {
    "tsx": "^4.7.0",
    "concurrently": "^8.2.2",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  },
  
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  }
}
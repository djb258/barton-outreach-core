[core]
	repositoryformatversion = 0
	filemode = false
	bare = false
	logallrefupdates = true
	symlinks = false
	ignorecase = true
	autocrlf = true

[remote "origin"]
	url = https://github.com/djb258/enricha-vision.git
	fetch = +refs/heads/*:refs/remotes/origin/*

[branch "main"]
	remote = origin
	merge = refs/heads/main

[branch "develop"]
	remote = origin
	merge = refs/heads/develop

[pull]
	rebase = true

[push]
	default = current
	followTags = true

[fetch]
	prune = true

[diff]
	tool = vscode

[merge]
	tool = vscode
	conflictstyle = diff3

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = log --graph --oneline --decorate --all
	ctb-check = !sh -c 'git diff --name-only HEAD~1 | grep -E "ctb/"'

[user]
	# Configure with: git config user.name "Your Name"
	# Configure with: git config user.email "your.email@example.com"

[credential]
	helper = manager-core

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

{
  "documentation": {
    "auto_generate": true,
    "formats": ["markdown", "json"],
    "output_directory": "ctb/docs/",
    "structure": {
      "api": {
        "description": "API documentation and reference",
        "auto_generate": true,
        "format": "openapi"
      },
      "architecture": {
        "description": "System architecture and design documents",
        "includes": [
          "system-overview",
          "database-schema",
          "component-diagram",
          "deployment"
        ]
      },
      "guides": {
        "description": "Development and integration guides",
        "includes": [
          "getting-started",
          "development-setup",
          "deployment-guide",
          "contribution-guide"
        ]
      },
      "tutorials": {
        "description": "Step-by-step tutorials",
        "categories": [
          "basic",
          "intermediate",
          "advanced"
        ]
      }
    },
    "versioning": {
      "enabled": true,
      "format": "semver"
    },
    "search": {
      "enabled": true,
      "indexing": "automatic"
    },
    "changelog": {
      "enabled": true,
      "auto_update": true
    }
  }
}

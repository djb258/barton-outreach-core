{
  "logging": {
    "directory": "logs/",
    "audit_enabled": true,
    "retention_days": 90,
    "levels": ["audit", "error", "info", "debug"],
    "format": {
      "timestamp": true,
      "level": true,
      "message": true,
      "metadata": true
    },
    "rotation": {
      "enabled": true,
      "max_size": "10MB",
      "max_files": 5
    },
    "transports": {
      "console": {
        "enabled": true,
        "level": "info"
      },
      "file": {
        "enabled": true,
        "level": "debug",
        "filename_pattern": "{level}-{date}.log"
      }
    }
  }
}

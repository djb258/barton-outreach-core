{
  "maintenance": {
    "enabled": true,
    "version": "1.0.0",
    "auto_tag_new_files": {
      "enabled": true,
      "patterns": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.json",
        "*.md"
      ],
      "tag_format": "CTB-BRANCH-COMPONENT-VN",
      "on_create": true,
      "on_modify": false
    },
    "monthly_audit": {
      "enabled": true,
      "schedule": "0 0 1 * *",
      "checks": [
        "ctb_compliance",
        "file_tagging",
        "registry_sync",
        "dependency_updates",
        "security_scan"
      ],
      "generate_report": true,
      "report_format": "markdown",
      "report_location": "logs/audit-reports/"
    },
    "compliance_alerts": {
      "enabled": true,
      "alert_threshold": 85,
      "channels": [
        "log",
        "console",
        "github_issues"
      ],
      "severity_levels": {
        "critical": 70,
        "warning": 85,
        "info": 95
      }
    },
    "automated_tasks": {
      "cleanup_old_logs": {
        "enabled": true,
        "retention_days": 90,
        "schedule": "0 0 * * 0"
      },
      "update_registry": {
        "enabled": true,
        "on_file_change": true
      },
      "sync_documentation": {
        "enabled": true,
        "auto_generate": true,
        "schedule": "0 0 * * 1"
      },
      "dependency_check": {
        "enabled": true,
        "check_vulnerabilities": true,
        "schedule": "0 0 * * 1"
      }
    },
    "performance_monitoring": {
      "enabled": true,
      "metrics": [
        "build_time",
        "bundle_size",
        "test_coverage",
        "api_response_time"
      ],
      "alert_on_regression": true,
      "thresholds": {
        "build_time_max": 60000,
        "bundle_size_max": 500000,
        "test_coverage_min": 80
      }
    },
    "backup": {
      "enabled": true,
      "frequency": "daily",
      "retention": 30,
      "include": [
        "ctb/",
        "global-config.yaml",
        "package.json"
      ]
    }
  }
}

{
  "neon": {
    "enabled": true,
    "database_url_env": "DATABASE_URL",
    "connection": {
      "ssl": true,
      "max_connections": 10,
      "idle_timeout": 30000,
      "connection_timeout": 5000
    },
    "pooling": {
      "enabled": true,
      "min": 2,
      "max": 10
    },
    "migrations": {
      "directory": "ctb/data/migrations/",
      "auto_run": false,
      "table": "_migrations"
    },
    "schema_validation": true
  }
}

{
  "ui": {
    "framework": "react",
    "typescript": true,
    "styling": "tailwind",
    "components_directory": "ctb/ui/components/",
    "pages_directory": "ctb/ui/pages/",
    "integration": {
      "src_components": "src/components/",
      "src_pages": "src/pages/"
    },
    "component_patterns": {
      "atomic_design": true,
      "levels": [
        "atoms",
        "molecules",
        "organisms",
        "templates",
        "pages"
      ]
    },
    "styling_conventions": {
      "utility_first": true,
      "custom_components": "src/components/ui/",
      "theme": {
        "primary": "indigo",
        "secondary": "purple",
        "accent": "pink"
      }
    },
    "state_management": {
      "preferred": "zustand",
      "alternatives": ["redux", "context"]
    },
    "routing": {
      "library": "react-router",
      "lazy_loading": true
    },
    "testing": {
      "unit": "vitest",
      "integration": "testing-library",
      "e2e": "playwright"
    }
  }
}

{
  "heir_orbt": {
    "enabled": true,
    "version": "1.0",
    "format": {
      "heir": "HEIR-YYYY-MM-SYSTEM-MODE-VN",
      "process_id": "PRC-SYSTEM-EPOCHTIMESTAMP"
    },
    "layers": {
      "1": {
        "name": "Infrastructure",
        "description": "Core system services, database, authentication, hosting",
        "components": [
          "database-setup",
          "authentication-service",
          "hosting-infrastructure",
          "logging-system",
          "monitoring"
        ],
        "responsibilities": [
          "System initialization",
          "Core service management",
          "Infrastructure provisioning"
        ]
      },
      "2": {
        "name": "Integration",
        "description": "External service connections and APIs",
        "components": [
          "firebase-integration",
          "neon-integration",
          "composio-mcp",
          "github-api",
          "ai-providers"
        ],
        "responsibilities": [
          "External API connections",
          "Service authentication",
          "Data synchronization"
        ]
      },
      "3": {
        "name": "Application",
        "description": "Business logic and data processing",
        "components": [
          "business-logic",
          "data-models",
          "state-management",
          "validation-rules",
          "workflows"
        ],
        "responsibilities": [
          "Business rule enforcement",
          "Data processing",
          "Application workflows"
        ]
      },
      "4": {
        "name": "Presentation",
        "description": "User interface and user experience",
        "components": [
          "react-components",
          "pages",
          "routing",
          "styling",
          "user-interactions"
        ],
        "responsibilities": [
          "UI rendering",
          "User input handling",
          "Visual presentation"
        ]
      }
    },
    "process_tracking": {
      "enabled": true,
      "format": "PRC-SYSTEM-EPOCHTIMESTAMP",
      "metadata": {
        "track_start_time": true,
        "track_end_time": true,
        "track_status": true,
        "track_errors": true
      }
    },
    "blueprint_versioning": {
      "enabled": true,
      "format": "semver",
      "current_version": "1.0.0"
    }
  }
}

{
  "profiles": [
    {
      "name": "CTB Development",
      "description": "Standard development profile for CTB work",
      "settings": {
        "commitMessageLength": 72,
        "autoStash": true,
        "autoFetch": true,
        "fetchInterval": 300,
        "pruneOnFetch": true
      },
      "hooks": {
        "pre-commit": true,
        "commit-msg": true,
        "pre-push": true
      }
    },
    {
      "name": "Feature Development",
      "description": "Profile for feature branch work",
      "settings": {
        "defaultBranch": "feature/",
        "autoCreatePR": true,
        "requireReview": true
      }
    },
    {
      "name": "Hotfix",
      "description": "Emergency hotfix profile",
      "settings": {
        "defaultBranch": "hotfix/",
        "fastTrack": true,
        "requireReview": false
      }
    }
  ],
  "activeProfile": "CTB Development"
}

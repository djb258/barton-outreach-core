# Barton Outreach Core Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# APIFY CONFIGURATION
# ========================================
# Your Apify API key from https://console.apify.com/account/integrations
APIFY_API_KEY=your_apify_api_key_here

# Apify Actor ID (default: apify/email-phone-scraper)
# You can use your own custom actor or one from the Apify Store
APIFY_ACTOR_ID=apify/email-phone-scraper

# Maximum pages to scrape per domain (default: 5)
APIFY_MAX_PAGES=5

# ========================================
# COMPOSIO CONFIGURATION
# ========================================
# Composio API key for MCP integration
COMPOSIO_API_KEY=ak_t-F0AbvfZHUZSUrqAGNn

# ========================================
# FIREBASE CONFIGURATION
# ========================================
# Firebase project ID
FIREBASE_PROJECT_ID=barton-outreach-core

# Firebase Admin SDK Service Account (JSON string)
# Generate from Firebase Console > Project Settings > Service Accounts
# Stringify the JSON and paste here
FIREBASE_SERVICE_ACCOUNT_KEY=

# ========================================
# NEON DATABASE CONFIGURATION
# ========================================
# Neon connection ID for Composio MCP
NEON_CONNECTION_ID=neon_barton_outreach

# Direct Neon database URL (for migrations only)
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech:5432/defaultdb

# ========================================
# MCP SERVER CONFIGURATION
# ========================================
# MCP server port (default: 3001)
MCP_SERVER_PORT=3001

# MCP server host (default: localhost)
MCP_SERVER_HOST=localhost

# ========================================
# ENVIRONMENT SETTINGS
# ========================================
# Environment (development, staging, production)
NODE_ENV=development

# Debug mode (true/false)
DEBUG=false

# ========================================
# PROCESS CONFIGURATION
# ========================================
# Default process IDs for various operations
DEFAULT_PROCESS_ID=barton-outreach-core

# Default blueprint ID
DEFAULT_BLUEPRINT_ID=BP-DEFAULT

# ========================================
# RATE LIMITING
# ========================================
# API rate limits (requests per minute)
API_RATE_LIMIT=60

# Scraping delay between requests (milliseconds)
SCRAPING_DELAY=1000

# ========================================
# LOGGING
# ========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE_PATH=./logs/app.log

# ========================================
# SECURITY
# ========================================
# JWT secret for authentication (generate a secure random string)
JWT_SECRET=

# API keys for internal services
INTERNAL_API_KEY=

# ========================================
# OUTREACH PLATFORMS
# ========================================
# Instantly API key for outreach campaigns
INSTANTLY_API_KEY=your_instantly_api_key_here

# HeyReach API key for outreach campaigns
HEYREACH_API_KEY=your_heyreach_api_key_here

# ========================================
# OPTIONAL INTEGRATIONS
# ========================================
# Apollo API key (if using Apollo for enrichment)
APOLLO_API_KEY=

# Clearbit API key (if using Clearbit for enrichment)
CLEARBIT_API_KEY=

# Hunter.io API key (if using Hunter for email finding)
HUNTER_API_KEY=

# MillionVerify API key (if using for email verification)
MILLION_VERIFY_API_KEY=

# ========================================
# NOTES
# ========================================
# 1. Never commit the actual .env file to version control
# 2. Keep this .env.example file updated with new variables
# 3. Use strong, unique values for all secrets and keys
# 4. Rotate keys regularly for security
# 5. Different environments should have different .env files
{
  "mcpServers": {
    "composio": {
      "command": "python",
      "args": ["-m", "composio", "serve"],
      "env": {
        "COMPOSIO_API_KEY": "${COMPOSIO_API_KEY}",
        "COMPOSIO_DEFAULT_ENTITY": "${COMPOSIO_DEFAULT_ENTITY:-default}",
        "MILLIONVERIFY_API_KEY": "${MILLIONVERIFY_API_KEY}",
        "APIFY_API_KEY": "${APIFY_API_KEY}",
        "INSTANTLY_API_KEY": "${INSTANTLY_API_KEY}",
        "HEYREACH_API_KEY": "${HEYREACH_API_KEY}"
      },
      "description": "Composio AI agent tools platform - primary MCP server",
      "priority": 1,
      "autostart": true,
      "healthCheck": {
        "endpoint": "/health",
        "interval": 30000
      },
      "capabilities": [
        "ai_tools",
        "workflow_automation",
        "action_execution",
        "app_integrations",
        "claude_optimization",
        "millionverify_email_verification",
        "apify_web_scraping",
        "instantly_outreach_campaigns",
        "heyreach_outreach_campaigns"
      ]
    },
    "reftools": {
      "command": "python",
      "args": ["-m", "reftools", "serve"],
      "env": {
        "REFTOOLS_API_KEY": "${REFTOOLS_API_KEY}"
      },
      "description": "RefTools API documentation and reference service",
      "priority": 2,
      "autostart": true,
      "fallback": true,
      "healthCheck": {
        "endpoint": "/health",
        "interval": 60000
      },
      "capabilities": [
        "api_documentation",
        "code_examples",
        "spec_validation",
        "reference_search"
      ]
    },
    "barton_mcp": {
      "command": "python",
      "args": ["apps/factory-imo/garage-mcp/services/mcp/main.py"],
      "env": {
        "DATABASE_URL": "${DATABASE_URL}",
        "COMPOSIO_API_KEY": "${COMPOSIO_API_KEY}",
        "REFTOOLS_API_KEY": "${REFTOOLS_API_KEY}"
      },
      "description": "Barton Outreach Core local MCP orchestrator",
      "priority": 3,
      "autostart": true,
      "capabilities": [
        "orchestration",
        "local_tools",
        "database_access",
        "heir_compliance"
      ]
    }
  },
  "agents": {
    "claude": {
      "type": "claude",
      "server": "composio",
      "capabilities": [
        "repo_read_write",
        "firebase_firestore",
        "firebase_hosting",
        "neon_vault_access",
        "builderio_component_registration",
        "doctrine_compliance"
      ],
      "env": {
        "COMPOSIO_API_KEY": "${COMPOSIO_API_KEY}",
        "FIREBASE_SERVICE_ACCOUNT_KEY": "${FIREBASE_SERVICE_ACCOUNT_KEY}",
        "DATABASE_URL": "${DATABASE_URL}",
        "BUILDERIO_API_KEY": "${BUILDERIO_API_KEY}",
        "MCP_AGENT_ID": "claude-barton-outreach"
      },
      "description": "Claude Code agent with full Barton Doctrine compliance and MCP integration",
      "priority": 1
    },
    "chatgpt": {
      "type": "chatgpt",
      "server": "composio",
      "capabilities": [
        "repo_read_write",
        "firebase_firestore",
        "firebase_hosting",
        "neon_vault_access",
        "builderio_component_registration",
        "doctrine_compliance"
      ],
      "env": {
        "COMPOSIO_API_KEY": "${COMPOSIO_API_KEY}",
        "FIREBASE_SERVICE_ACCOUNT_KEY": "${FIREBASE_SERVICE_ACCOUNT_KEY}",
        "DATABASE_URL": "${DATABASE_URL}",
        "BUILDERIO_API_KEY": "${BUILDERIO_API_KEY}",
        "MCP_AGENT_ID": "chatgpt-barton-outreach",
        "OPENAI_API_KEY": "${OPENAI_API_KEY}"
      },
      "description": "ChatGPT agent with same tool access as Claude for collaborative development",
      "priority": 2,
      "rate_limiting": {
        "requests_per_minute": 60,
        "burst_limit": 10
      }
    }
  },
  "orchestration": {
    "primary_server": "composio",
    "fallback_order": ["barton_mcp", "reftools"],
    "max_concurrent_tasks": 5,
    "task_timeout": 300000,
    "retry_config": {
      "max_retries": 3,
      "backoff_strategy": "exponential",
      "initial_delay": 1000
    }
  },
  "logging": {
    "level": "info",
    "file": "logs/mcp.log",
    "max_size": "10MB",
    "max_files": 5
  },
  "development": {
    "hot_reload": true,
    "debug_mode": true,
    "mock_external_apis": false
  },
  "security": {
    "api_key_validation": true,
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 100
    },
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3001", "http://localhost:5173"]
    }
  }
}
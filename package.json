{
  "name": "@barton/monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Barton Outreach Core - Monorepo with IMO Creator, API services, and MCP integration",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:factory-imo\" \"npm run dev:amplify-client\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:factory-imo": "npm run dev --workspace=apps/factory-imo",
    "dev:amplify-client": "npm run dev --workspace=apps/amplify-client",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=apps/api",
    "build:factory-imo": "npm run build --workspace=apps/factory-imo",
    "build:amplify-client": "npm run build --workspace=apps/amplify-client",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "bootstrap": "npm install && npm run build --workspace=packages/data-router && npm run build --workspace=packages/mcp-clients",
    "db:migrate": "cd infra && psql $DATABASE_URL -f neon.sql",
    "db:setup-company": "cd infra && psql $DATABASE_URL -f neon-company-schema.sql",
    "neon:schema": "node scripts/get-neon-schema.mjs",
    "neon:company-schema": "node scripts/get-company-schema.mjs",
    "mcp:demo": "node packages/mcp-clients/run.mjs",
    "garage-bay:audit": "python garage_bay.py --target .",
    "compliance:check": "cd tools && python repo_compliance_check.py .",
    "docs:generate": "bash tools/deep_wiki_generator.sh"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djb258/barton-outreach-core.git"
  },
  "keywords": [
    "monorepo",
    "imo-creator",
    "mcp",
    "heir",
    "outreach",
    "neon",
    "express",
    "react"
  ],
  "license": "MIT"
}
{
  "name": "@barton/monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Barton Outreach Core - Monorepo with IMO Creator, API services, and MCP integration",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:factory-imo\" \"npm run dev:amplify-client\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:factory-imo": "npm run dev --workspace=apps/factory-imo",
    "dev:amplify-client": "npm run dev --workspace=apps/amplify-client",
    "build": "npm run build --workspaces --if-present",
    "build:dev": "vite build --mode development",
    "build:api": "npm run build --workspace=apps/api",
    "build:factory-imo": "npm run build --workspace=apps/factory-imo",
    "build:amplify-client": "npm run build --workspace=apps/amplify-client",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "bootstrap": "npm install && npm run build --workspace=packages/data-router && npm run build --workspace=packages/mcp-clients",
    "db:migrate": "cd infra && psql $DATABASE_URL -f neon.sql",
    "db:setup-company": "cd infra && psql $DATABASE_URL -f neon-company-schema.sql",
    "neon:schema": "node scripts/get-neon-schema.mjs",
    "neon:company-schema": "node scripts/get-company-schema.mjs",
    "schema:refresh": "tsx scripts/refresh-schema-map.ts",
    "sync:errors": "tsx scripts/sync-errors-to-firebase.ts",
    "mcp:demo": "node packages/mcp-clients/run.mjs",
    "garage-bay:audit": "python garage_bay.py --target .",
    "compliance:check": "cd tools && python repo_compliance_check.py .",
    "docs:generate": "bash tools/deep_wiki_generator.sh",
    "scrape:apify": "node agents/specialists/apifyRunner.js",
    "verify:email": "node agents/specialists/millionVerifyRunner.js",
    "outreach:run": "node agents/specialists/outreachRunner.js",
    "audit:query": "node ops/orbt/auditLogger.js",
    "neon:test": "node ops/orbt/neonWriter.js",
    "history:check": "node ops/orbt/historyEnforcer.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@composio/core": "^0.1.52",
    "axios": "^1.7.9",
    "pg": "^8.13.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.3",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^16.3.1",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lovable-tagger": "^1.1.11",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.1",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.65.0",
    "react-resizable-panels": "^3.0.6",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.2.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2",
    "vite": "^7.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/djb258/barton-outreach-core.git"
  },
  "keywords": [
    "monorepo",
    "imo-creator",
    "mcp",
    "heir",
    "outreach",
    "neon",
    "express",
    "react"
  ],
  "license": "MIT"
}

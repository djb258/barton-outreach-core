# Amplify Client Environment Configuration
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ===================================
# REQUIRED: API Configuration
# ===================================

# Backend API URL
# Development: http://localhost:3000
# Production: https://barton-outreach-api.onrender.com
VITE_API_URL=http://localhost:3000

# API base path (if API uses prefix like /api/v1)
VITE_API_BASE_PATH=/api

# ===================================
# OPTIONAL: Authentication
# ===================================

# Auth0 domain (if using Auth0)
# VITE_AUTH0_DOMAIN=your-domain.auth0.com

# Auth0 client ID
# VITE_AUTH0_CLIENT_ID=your-client-id

# Auth0 audience
# VITE_AUTH0_AUDIENCE=your-api-audience

# ===================================
# OPTIONAL: Feature Flags
# ===================================

# Enable analytics dashboard
VITE_ENABLE_ANALYTICS=true

# Enable campaign management
VITE_ENABLE_CAMPAIGNS=true

# Enable contact enrichment UI
VITE_ENABLE_ENRICHMENT=true

# Enable webhook configuration UI
VITE_ENABLE_WEBHOOKS=false

# ===================================
# OPTIONAL: UI Configuration
# ===================================

# Application title
VITE_APP_TITLE=Barton Outreach

# Default page size for lists
VITE_DEFAULT_PAGE_SIZE=50

# Max page size allowed
VITE_MAX_PAGE_SIZE=200

# Enable dark mode
VITE_ENABLE_DARK_MODE=true

# ===================================
# OPTIONAL: External Services
# ===================================

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for frontend error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Intercom app ID for customer support
# VITE_INTERCOM_APP_ID=your-app-id

# ===================================
# OPTIONAL: Performance
# ===================================

# Enable service worker for offline support
VITE_ENABLE_SERVICE_WORKER=false

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Number of retry attempts for failed API calls
VITE_API_RETRY_ATTEMPTS=2

# ===================================
# Development Only
# ===================================

# Enable debug mode (shows console logs)
VITE_DEBUG=false

# Mock API responses (no backend required)
VITE_MOCK_API=false

# Show development tools
VITE_SHOW_DEV_TOOLS=true

# Enable React Query devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# ===================================
# Build Configuration
# ===================================

# Build environment (development | staging | production)
VITE_ENV=development

# Enable source maps in production
VITE_ENABLE_SOURCE_MAPS=false

# Base URL for deployment (e.g., /app/ if not at root)
VITE_BASE_URL=/

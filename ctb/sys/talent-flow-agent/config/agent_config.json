{
  "agent_id": "04.04.02.04.60000.001",
  "agent_name": "Talent Flow Agent",
  "version": "1.0.0",
  "barton_doctrine_id": "04.04.02.04.ple.talent_flow",
  "ctb_color": "yellow",
  "ctb_layer": "system",

  "database": {
    "connection_string_env": "NEON_DATABASE_URL",
    "schema": "marketing",
    "timeout_seconds": 30,
    "max_connections": 5
  },

  "processing": {
    "batch_size": 100,
    "max_concurrent": 10,
    "snapshot_frequency": "monthly",
    "lookback_days": 30,
    "enable_parallel_processing": true
  },

  "safety": {
    "no_reprocess_same_hash": true,
    "no_multipass_contradictions": true,
    "cooldown_hours": 168,
    "max_movements_per_person_per_month": 2,
    "require_hash_change": true
  },

  "logging": {
    "level": "INFO",
    "log_to_shq": true,
    "log_table": "shq.audit_log",
    "include_worker_id": true,
    "include_process_id": true
  },

  "bit_integration": {
    "enabled": true,
    "generate_bit_signals": true,
    "bit_signal_table": "marketing.bit_signal",
    "movement_signal_weights": {
      "hire": 50,
      "exit": 30,
      "promotion": 70,
      "transfer": 40
    }
  },

  "enrichment_integration": {
    "enabled": true,
    "enrichment_api_url": "http://localhost:8001",
    "trigger_enrichment_on_missing_fields": true,
    "enrichment_timeout_seconds": 60
  },

  "output_tables": {
    "movements": "marketing.talent_flow_movements",
    "snapshots": "marketing.talent_flow_snapshots",
    "contradictions": "garage.contradictions"
  }
}

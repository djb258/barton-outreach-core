# API Server Environment Configuration
# Copy this file to .env and fill in your values
# Never commit .env to version control

# ===================================
# REQUIRED: Database Configuration
# ===================================

# Neon PostgreSQL connection string
# Format: postgresql://user:password@host:5432/database?sslmode=require&channel_binding=require
# Get this from: https://console.neon.tech/app/projects
DATABASE_URL=postgresql://your_user:your_password@ep-example-123456.us-east-1.aws.neon.tech/your_database?sslmode=require&channel_binding=require

# ===================================
# REQUIRED: Server Configuration
# ===================================

# Port for API server (default: 3000)
PORT=3000

# Node environment (development | production | test)
NODE_ENV=development

# ===================================
# OPTIONAL: API Configuration
# ===================================

# API version prefix (default: /api)
API_PREFIX=/api

# Enable request logging (true | false)
ENABLE_LOGGING=true

# Log level (error | warn | info | debug)
LOG_LEVEL=info

# CORS allowed origins (comma-separated)
# Use * for development, specific domains for production
CORS_ORIGINS=http://localhost:5173,https://barton-amplify.vercel.app

# ===================================
# OPTIONAL: Rate Limiting
# ===================================

# Max requests per minute per IP
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# ===================================
# OPTIONAL: Authentication
# ===================================

# JWT secret for session tokens (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-here

# API key for external integrations
API_KEY=your-api-key-here

# Token expiration time (e.g., 7d, 24h, 60m)
TOKEN_EXPIRATION=7d

# ===================================
# OPTIONAL: External Services
# ===================================

# Composio API key for MCP integrations
COMPOSIO_API_KEY=your-composio-api-key

# Anthropic API key for Claude AI
ANTHROPIC_API_KEY=your-anthropic-api-key

# Apollo.io API key for data enrichment
APOLLO_API_KEY=your-apollo-api-key

# Apify API key for web scraping
APIFY_API_KEY=your-apify-api-key

# ===================================
# OPTIONAL: Webhook Configuration
# ===================================

# Webhook secret for validating incoming webhooks
WEBHOOK_SECRET=your-webhook-secret

# Webhook retry attempts on failure
WEBHOOK_RETRY_ATTEMPTS=3

# ===================================
# OPTIONAL: Monitoring & Alerts
# ===================================

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# ===================================
# Development Only
# ===================================

# Enable debug mode (more verbose logging)
DEBUG=false

# Pretty print JSON responses
PRETTY_JSON=true

# Disable authentication for local testing
DISABLE_AUTH=false

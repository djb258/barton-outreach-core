{
  "tool_id": "logger",
  "name": "Logger / Monitor",
  "blueprint_id": "04.svg.marketing.outreach.v1",
  "barton_id": "04.04.02.04.10000.006",
  "altitude": 10000,
  "version": "1.0.0",
  "description": "Central dashboard for audit + error tracking",
  "neon_tables": {
    "audit": "shq.audit_log",
    "errors": "shq.error_master",
    "enrichment": "marketing.data_enrichment_log",
    "pipeline": "marketing.pipeline_errors"
  },
  "dependencies": {
    "neon_db": "required",
    "grafana_api": "optional"
  },
  "kill_switch": {
    "enabled": true,
    "condition": "critical_errors > 5",
    "action": "halt_and_notify"
  },
  "environment_variables": ["NEON_CONNECTION_STRING", "GRAFANA_API_TOKEN"],
  "api_endpoints": {
    "log": "/api/logger/log",
    "errors": "/api/logger/errors",
    "audit": "/api/logger/audit",
    "stats": "/api/logger/stats",
    "health": "/api/logger/health"
  },
  "n8n_integration": {
    "webhook_url": "/hooks/logger",
    "event_types": ["log.created", "error.logged", "audit.created"],
    "response_format": "heir_orbt"
  }
}

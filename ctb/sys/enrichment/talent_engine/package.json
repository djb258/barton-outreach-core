{
  "name": "talent-engine",
  "version": "1.0.0",
  "description": "TypeScript Talent Engine for Hub-and-Spoke enrichment pipeline",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "run:pattern": "node dist/scripts/run_talent_engine.js --mode pattern",
    "run:email": "node dist/scripts/run_talent_engine.js --mode generate_email",
    "run:verify": "node dist/scripts/run_talent_engine.js --mode verify"
  },
  "keywords": [
    "enrichment",
    "talent-engine",
    "hub-and-spoke",
    "barton"
  ],
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

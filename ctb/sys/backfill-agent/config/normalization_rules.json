{
  "company_name": {
    "lowercase_patterns": ["inc", "llc", "ltd", "corp", "corporation", "company", "group", "holdings", "partners"],
    "remove_patterns": ["Inc.", "LLC", "Ltd.", "Corp.", "Corporation", "Company", "Group", "Holdings", "Partners", "LP", "LLP"],
    "trim_whitespace": true,
    "standardize_casing": "title",
    "dedupe_spaces": true
  },

  "company_domain": {
    "extract_from_email": true,
    "extract_from_website": true,
    "lowercase": true,
    "remove_www": true,
    "remove_protocols": ["http://", "https://", "www."],
    "valid_tlds": [".com", ".net", ".org", ".io", ".co", ".ai", ".tech", ".dev", ".app"]
  },

  "person_name": {
    "title_case": true,
    "trim_whitespace": true,
    "remove_prefixes": ["Mr.", "Mrs.", "Ms.", "Dr.", "Prof."],
    "remove_suffixes": ["Jr.", "Sr.", "III", "IV"],
    "split_full_name": true
  },

  "title": {
    "standardize_abbreviations": {
      "VP": ["V.P.", "Vice President", "VP of", "V P"],
      "SVP": ["Sr. VP", "Senior VP", "Sr VP", "SVP of"],
      "EVP": ["Exec VP", "Executive VP", "EVP of"],
      "CEO": ["Chief Executive Officer", "C.E.O.", "Chief Exec"],
      "CFO": ["Chief Financial Officer", "C.F.O.", "Chief Finance"],
      "CTO": ["Chief Technology Officer", "C.T.O.", "Chief Tech"],
      "CMO": ["Chief Marketing Officer", "C.M.O.", "Chief Marketing"],
      "COO": ["Chief Operating Officer", "C.O.O.", "Chief Ops"],
      "CHRO": ["Chief HR Officer", "Chief Human Resources Officer"],
      "Director": ["Dir.", "Dir of", "Director of"],
      "Manager": ["Mgr", "Mgr.", "Manager of"]
    },
    "title_case": true,
    "remove_extra_whitespace": true
  },

  "email": {
    "lowercase": true,
    "validate_format": true,
    "split_multiple": true,
    "delimiter": [",", ";", "|"],
    "prefer_work_email": true,
    "work_email_indicators": ["company_domain"],
    "personal_email_domains": ["gmail.com", "yahoo.com", "hotmail.com", "outlook.com", "aol.com", "icloud.com"]
  },

  "phone": {
    "remove_non_digits": true,
    "format": "E.164",
    "default_country_code": "+1",
    "validate_length": true,
    "min_length": 10,
    "max_length": 15
  },

  "linkedin_url": {
    "standardize_format": true,
    "remove_tracking_params": true,
    "lowercase": true,
    "valid_patterns": ["linkedin.com/in/", "linkedin.com/company/"]
  },

  "dates": {
    "last_engaged_at": {
      "formats": ["ISO8601", "%Y-%m-%d", "%m/%d/%Y", "%d/%m/%Y"],
      "handle_blank": "null",
      "validate_range": true,
      "min_year": 2020,
      "max_year": 2025
    }
  },

  "counts": {
    "historical_open_count": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 10000
    },
    "historical_reply_count": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 1000
    },
    "historical_meeting_count": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "max": 100
    }
  }
}

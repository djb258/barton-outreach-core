# ============================================================================
# Environment Variables - Generic Validation Framework
# ============================================================================
# Copy this file to .env and fill in your values
# ============================================================================

# ──────────────────────────────────────────────────────────────
# Neon Database (Vault - Source and Target)
# ──────────────────────────────────────────────────────────────
NEON_DATABASE_URL=postgresql://user:password@ep-xxxx-pooler.region.aws.neon.tech:5432/database?sslmode=require

# ──────────────────────────────────────────────────────────────
# Supabase Database (Workspace - Validation and Enrichment)
# ──────────────────────────────────────────────────────────────
SUPABASE_DATABASE_URL=postgresql://postgres:password@db.xxxx.supabase.co:5432/postgres

# Supabase API Key (for REST API access - optional)
SUPABASE_API_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxx

# Supabase Project URL (for REST API - optional)
SUPABASE_URL=https://xxxx.supabase.co

# ──────────────────────────────────────────────────────────────
# Notification Webhooks
# ──────────────────────────────────────────────────────────────
# Lovable.dev webhook for dashboard updates
LOVABLE_WEBHOOK_URL=https://hooks.lovable.dev/your-webhook-id

# Slack webhook for notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ──────────────────────────────────────────────────────────────
# Enrichment Agents (Optional - for future use)
# ──────────────────────────────────────────────────────────────
APIFY_API_KEY=apify_api_xxxx
CLEARBIT_API_KEY=sk_xxxx
APOLLO_API_KEY=xxxx

# ──────────────────────────────────────────────────────────────
# Framework Settings
# ──────────────────────────────────────────────────────────────
# Override batch size from config (optional)
BATCH_SIZE=100

# Enable dry run mode by default (optional)
DRY_RUN=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ──────────────────────────────────────────────────────────────
# n8n Integration (if using n8n workflows)
# ──────────────────────────────────────────────────────────────
N8N_WEBHOOK_URL=https://your-n8n.app.n8n.cloud/webhook/validation-trigger
N8N_API_KEY=n8n_api_xxxx

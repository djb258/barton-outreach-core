# Environment Configuration Template
# Copy to .env and fill in actual values (DO NOT commit .env file)

# =============================================================================
# RENDER API SERVICE (Primary External Dependency)
# =============================================================================

# Render API Configuration
RENDER_API_BASE_URL=https://your-api.onrender.com
RENDER_API_KEY=your_render_api_key_here

# Render Service Configuration
RENDER_SERVICE_URL=<render-api-repo-url>
RENDER_ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION (Neon Serverless)
# =============================================================================

# Neon Database Connection
NEON_DATABASE_URL=postgresql://username:password@hostname:5432/database_name
NEON_DATABASE_HOST=hostname.neon.tech
NEON_DATABASE_NAME=your_database_name
NEON_DATABASE_USER=your_username
NEON_DATABASE_PASSWORD=your_password

# Database Connection Pool Settings
DATABASE_POOL_MAX=10
DATABASE_POOL_MIN=2
DATABASE_TIMEOUT_MS=30000

# =============================================================================
# APOLLO.IO INTEGRATION
# =============================================================================

# Apollo API Configuration
APOLLO_API_KEY=your_apollo_api_key
APOLLO_API_BASE_URL=https://api.apollo.io/v1
APOLLO_RATE_LIMIT_RPM=60
APOLLO_DAILY_LIMIT=10000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# Application Settings
COMPANY_UID_PREFIX=CO
SLOT_UID_PREFIX=SL
PERSON_UID_PREFIX=PE

# Rate Limiting
API_RATE_LIMIT_RPM=100
API_BURST_LIMIT=10

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging Configuration
LOG_FORMAT=json
LOG_DESTINATION=stdout

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
API_KEY_ROTATION_DAYS=90
CORS_ALLOWED_ORIGINS=https://your-frontend.com

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
REQUIRE_HTTPS=true

# =============================================================================
# ERROR HANDLING & RESILIENCE
# =============================================================================

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_BASE_DELAY_MS=1000
RETRY_MAX_DELAY_MS=10000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MS=60000

# Timeout Configuration
HTTP_TIMEOUT_MS=30000
DATABASE_TIMEOUT_MS=30000

# =============================================================================
# DEVELOPMENT/TESTING (Optional)
# =============================================================================

# Development Mode Settings (remove in production)
# DEV_MOCK_RENDER_API=false
# DEV_MOCK_APOLLO_API=false
# DEV_SEED_DATABASE=false

# Testing Configuration (remove in production)
# TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db
# TEST_RENDER_API_URL=http://localhost:3001
# TEST_MODE=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
BUILD_TARGET=production
BUILD_SOURCE_MAP=false

# Deployment Metadata
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_COMMIT_SHA=${GITHUB_SHA:-unknown}

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# Data Retention
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# Compliance Settings
PII_ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true
DATA_CLASSIFICATION=internal

